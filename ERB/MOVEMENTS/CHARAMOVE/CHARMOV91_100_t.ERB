;토지코
@CHARAMOVE_DATA_91(ARG, ARG:2)
LOCAL = 91
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;신령묘 멤버의 방
			CASE 127, 128
				RETURN -5
			;별채와 묘지와 명련사 내부
			CASE 103 TO 122
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 1, 6
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 11,12,13,15,16, 61,62,67,68
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

