;와카사기히메
@CHARAMOVE_DATA_93(ARG, ARG:2)
LOCAL = 93
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
		;예외 처리
		IF !CFLAG:LOCAL:만난위치
			CFLAG:LOCAL:현재위치 = SUKIMA()
		ELSE
			CFLAG:LOCAL:현재위치 = CFLAG:LOCAL:만난위치
			IF FLAG:풀장 < 8
				SIF CFLAG:LOCAL:현재위치 != 610 && !AT_HOME(LOCAL) && !CFLAG:LOCAL:데이트중
					CFLAG:LOCAL:현재위치 = 안개의호수
			ENDIF
		ENDIF
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		IF FLAG:풀장 < 8
			SELECTCASE ARG:2
				CASE 347, 348
					RETURN 0
				CASEELSE
					RETURN -100
			ENDSELECT
		ELSE
			SELECTCASE ARG:2
				;헛간과 저택의 3층과 지하, 및 각개인 방에는 못 들어간다
				CASE 303, 304, 305, 311, 312, 318, 320, 321, 323, 325, 340, 341, 342, 344, 345, 346, 347, 348
					RETURN -100
			ENDSELECT
		ENDIF
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 3
				RETURN 1
			CASE 4
				SIF FLAG:풀장 >= 8
					RETURN 1
				RETURN 0
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 31
				RETURN 1
			CASE 32,33,34, 41,42,43
				SIF FLAG:풀장 >= 8
					RETURN 1
				RETURN 0
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

