;마리사
@CHARAMOVE_DATA_11(ARG, ARG:2)
LOCAL = 11
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;하쿠레이 신사·툇마루
			CASE 10
				RETURN 5
			;향림당, 버섯 군생지
			CASE 502, 507
				RETURN 5
			;키리사메마법점, 15~19시는 가기 쉽다
			CASE 510
				IF BETWEENTIME(900,1140)
					RETURN 5
				ELSE
					RETURN -5
				ENDIF
			;마리사 침실, 자고 일어나기와 자기 전 이외는 피한다
			CASE 512
				IF CFLAG:LOCAL:취침시간 - TIME > 60 && CFLAG:LOCAL:기상시간 - TIME > 60
					RETURN -10
				ELSE
					RETURN 0
				ENDIF
			;마리사 연구실, 19~22시는 가기 쉽다
			CASE 513
				IF BETWEENTIME(1140,1320)
					RETURN 10
				ELSE
					RETURN -5
				ENDIF
			;신키의 방, 유메코의 방, 앨리스가의 목욕탕, 앨리스의 창고, 빈 방, 엘렌가, 요괴의 사는 곳
			CASE 522, 523, 526, 528, 531, 535, 536, 537, 541, 542, 543, 544
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 2, 3, 4, 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,4, 21,22,23,27, 31 TO 38, 41,42,43,45,46,47, 51 TO 57
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

