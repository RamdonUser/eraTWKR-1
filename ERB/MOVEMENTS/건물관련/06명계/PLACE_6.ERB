@MAP6_AREANAME(PLACE_ID)
#FUNCTIONS
#LOCALSIZE 1
#LOCALSSIZE 1
#DIM PLACE_ID
IF MAIN_MAP == 6
	SIF INRANGE(PLACE_ID, 610, 614)
		RETURNF "마요히가"
	SIF INRANGE(PLACE_ID, 615, 618)
		RETURNF "피안"
	SIF INRANGE(PLACE_ID, 619, 624)
		RETURNF "백옥루"
	SIF PLACE_ID == 602
		RETURNF "삼도천"
	SIF PLACE_ID == 604
		RETURNF "오두막"
	SIF PLACE_ID == 608
		RETURNF "백옥루 정원"
	RETURNF "명계"
ELSE
	SELECTCASE PLACE_ID
	CASE 630
		RETURNF "마요히가"
	CASE 640
		RETURNF "오두막"
	CASE 670
		RETURNF "피안"
	CASE 680
		RETURNF "백옥루 정원"
	CASE 690
		RETURNF "백옥루"
	CASEELSE
		RETURNF "명계"
	ENDSELECT
ENDIF
