@GETMAP_2(ARG)
#DIM 기색
기색 = 0
IF TALENT:MASTER:위치짐작 && FLAG:짐작모드 == 1
	SIF ROOMDATA:(ARG % 100) & 장소_모브
		SETCOLOR C_D_PINK
	FOR LOCAL, 1, CHARANUM
		IF CFLAG:LOCAL:현재위치 == ARG
			IF CFLAG:LOCAL:행동 == 5
				기색 = 2
				BREAK
			ELSEIF CFLAG:LOCAL:수면
				기색 = 3
				BREAK
			ENDIF
			기색 = 1
		ENDIF
		IF ARG == 213 && !GROUPMATCH(CFLAG:MASTER:현재위치, 226,213)
			IF GROUPMATCH(CFLAG:LOCAL:현재위치, 213,226)
				IF CFLAG:LOCAL:행동 == 5
					기색 = 2
					BREAK
				ELSEIF CFLAG:LOCAL:수면
					기색 = 3
					BREAK
				ENDIF
				기색 = 1
			ENDIF
		ELSEIF ARG == 214 && !GROUPMATCH(CFLAG:MASTER:현재위치, 230,231,232,233,234,235,236,237)
			IF GROUPMATCH(CFLAG:LOCAL:현재위치, 230,231,232,233,234,235,236,237)
				IF CFLAG:LOCAL:행동 == 5
					기색 = 2
					BREAK
				ELSEIF CFLAG:LOCAL:수면
					기색 = 3
					BREAK
				ENDIF
				기색 = 1
			ENDIF
		ENDIF
	NEXT
	IF 기색 == 1
		SETCOLOR 255, 100, 200
	ELSEIF 기색 == 2
		SETCOLOR 255, 100, 0
	ELSEIF 기색 == 3
		SETCOLOR 0, 120, 180
	ENDIF
ENDIF
CALL GETMAP_YOGORE(ARG)
