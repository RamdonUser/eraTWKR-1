CFLAG:MASTER:현재위치 = CFLAG:MASTER:초기위치
FOR LOCAL, 1,11
	CFLAG:LOCAL:현재위치 = 9
	CFLAG:LOCAL:335 = 1 + RAND:(ABL:MASTER:화술기능)
NEXT
FLAG:562 = 1
TIME += (500 - ARG * 100)
DOWNBASE:MASTER:체력 = (1500 - ARG * 300)
DOWNBASE:MASTER:기력 = (1500 - ARG * 100)
BASE:MASTER:TSP = 0
SIF ARG
	EXP:MASTER:청소경험 += (1 + RAND: (ARG * 3))
SIF !ARG
	EXP:MASTER:청소경험 += (1 + RAND: (2))
EXP:MASTER:이상청소경험 += RAND:5
