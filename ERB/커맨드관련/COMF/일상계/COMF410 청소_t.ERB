	CASE 15
		LOCAL = 1
	;낡은오두막(EX 멤버 방)
	CASE 16
		LOCAL = FLAG:더부살이캐릭터
	;작은창고(루코토)
	CASE 17
		LOCAL = 2
	;반침(카나)
	CASE 18
		LOCAL = 3
	;큰창고(스이카)
	CASE 19
		LOCAL = 10
	;서니방
	CASE 32
		LOCAL = 7
	;루나방
	CASE 33
		LOCAL = 5
	;스타방
	CASE 34
		LOCAL = 6
	;유메미방
	CASE 43
		LOCAL = 9
	;치유리방
	CASE 44
		LOCAL = 8
	;별채(미마 님 전용 별채)
	CASE 52
		LOCAL = 4
	CASE 54
		LOCAL = 71
	CASE 55
		LOCAL = FLAG:16
	CASEELSE
		LOCAL = 0
		FOR 자택캐릭터, 1, CHARANUM
			IF CFLAG:MASTER:현재위치 == CFLAG:(자택캐릭터):신사거주
				LOCAL = 자택캐릭터
			ENDIF
		NEXT
ENDSELECT
[SKIPEND]

FOR 자택캐릭터, 1, CHARANUM
	IF CFLAG:MASTER:현재위치 == CFLAG:(자택캐릭터):신사거주
		LOCAL = 자택캐릭터
	ENDIF
NEXT
LOCAL:1 = 오늘의팬티(LOCAL)
LOCAL:2 =  RAND:5000
SIF FLAG:발원내용 == 202
	LOCAL:2 = RAND:4000
IF YOGORE:(CFLAG:MASTER:현재위치) > LOCAL:2 && LOCAL && LOCAL:1 && !FLAG:70
	TSTR:3 = %CALLNAME:LOCAL%{LOCAL:1}/
	TSTR:2 = %PANTSNAME(LOCAL:1, LOCAL)%
	FOUND_PANTS_TYPE = LOCAL:1
	FOUND_PANTS_OWNER = LOCAL
ENDIF

;캐릭터가 이제 청소하려고 생각하는 방의 흩어진 상태
@OSOUJI_LIMIT(ARG)
#FUNCTION
#DIM O_LIMIT
O_LIMIT = 300
SIF TALENT:ARG:게으름
	O_LIMIT *= 10
O_LIMIT = O_LIMIT * (3 + TALENT:ARG:악취내성) / 3
SIF TALENT:ARG:헌신적
	O_LIMIT /= 2
SIF TALENT:ARG:청소중독
	O_LIMIT /= 10
RETURNF O_LIMIT

