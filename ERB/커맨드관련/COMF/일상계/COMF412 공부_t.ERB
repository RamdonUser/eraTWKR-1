;-------------------------------------------------
;공부
;일상계 커맨드, 레벨 1
;-------------------------------------------------
@COM412
DOWNBASE:MASTER:체력 = 100
DOWNBASE:MASTER:기력 = 300

IF TARGET > 0 && !CFLAG:수면 && CFLAG:행동 != 5
	;고정으로 획득하는 소스
	SOURCE:환락 = 200
	TFLAG:무드상승억제 = 1
	;신뢰
	TFLAG:98 = 3
	SIF ABL:MASTER:교양 > 2
		TFLAG:98 ++ 
	IF ABL:MASTER:교양 > ABL:교양
		TFLAG:98 ++ 
		EXP:학습경험 += 2
	ENDIF
	IF ABL:MASTER:교양 < ABL:교양 - 2
		MAXBASE:MASTER:기력+=1
		EXP:MASTER:학습경험 ++
	ENDIF
	;ABL:순종을 본다
	IF ABL:순종 <= 1
		SOURCE:환락 += (ABL:순종 * 60)
	ELSEIF ABL:순종 <= 3
		SOURCE:환락 += 200 + (ABL:순종 * 60)
	ELSEIF ABL:순종 <= 5
		SOURCE:환락 += 500 + (ABL:순종 * 60)
	ELSEIF ABL:순종 <= 8
		SOURCE:환락 += 750 + (ABL:순종 * 75)
	ELSEIF ABL:순종 <= 11
		SOURCE:환락 += 1000 + (ABL:순종 * 75)
	ELSE
		SOURCE:환락 += 2000 + (ABL:순종 * 30)
	ENDIF

	;호감 도를 본다
	IF CFLAG:2 <= 500
		SOURCE:환락 += CFLAG:2
	ELSEIF CFLAG:2 <= 5000
		SOURCE:환락 += 500 + (CFLAG:2 - 500) / 3
	ELSE
		SOURCE:환락 += 2000 + (CFLAG:2 - 5000) / 5
	ENDIF
	SIF SOURCE:환락 < 0
		SOURCE:환락 = 0
	MAXBASE:MASTER:기력+=1
	EXP:MASTER:학습경험 ++
	EXP:학습경험 ++
ENDIF

TIME += 60
SIF CFLAG:동행
	CFLAG:동행 += 60
MAXBASE:MASTER:기력+=1
EXP:MASTER:학습경험 ++
IF ITEM:103 && !RAND:2
	MAXBASE:MASTER:기력+=1
	EXP:MASTER:학습경험 ++
ENDIF
IF ITEM:214 > 0
	MAXBASE:MASTER:기력+=1
	EXP:MASTER:학습경험 ++
ENDIF
RETURN 1

