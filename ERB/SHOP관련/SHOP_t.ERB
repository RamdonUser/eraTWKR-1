	CALL ITEM_BUY
;설정
ELSEIF RESULT == 102 && !FLAG:기절중단
	CALL SCHEDULE
ELSEIF RESULT == 104 && !FLAG:기절중단&&MAIN_MAP==14
	CALL 주거설정함수
ELSEIF RESULT == 105 && !FLAG:기절중단
	CALL BONUS
ELSEIF RESULT == 107 && !FLAG:기절중단
	CALL IRAI_RESET
