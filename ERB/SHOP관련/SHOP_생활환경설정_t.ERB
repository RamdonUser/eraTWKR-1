		CALL COLORMESSAGE("최악이어도 4시간 이상 잘 필요가 있습니다", C_ORANGE, 1)
	ELSE
		PRINTFORML [0] - 완료
	ENDIF
	INPUT
	IF RESULT == 0 && 수면시간예측(TIME:3) >= 240
		PRINTFORM 자명종을 
		CALL COLORMESSAGE(@"%시각표시(TIME:3)%", C_YELLOW)
		PRINTFORMW 로 설정했습니다.
		RETURN 1
	ELSEIF RESULT == 10000 && 동거사람 < CHARANUM && 동거사람
		TIME:3 = CFLAG:동거사람:기상시간
	ELSEIF INRANGE(RESULT, -1360, 1360)
		TIME:3 += RESULT
		IF TIME:3 >= 1440
			TIME:3 -= 1440
		ELSEIF TIME:3 < 0
			TIME:3 += 1440
		ENDIF
	ENDIF
	CLEARLINE 7
	GOTO INPUT_LOOP
[SKIPSTART]
	;전의 것이 괜찮다고 되면(자) 여기를 되돌려
	VARSET LOCAL
	FOR LOCAL, 0, 24
		IF 수면시간예측(LOCAL * 60) < 240
			SETCOLOR 50, 50, 50
			PRINTPLAINFORM [{LOCAL, 2}]
		ELSE
			SIF TIME:3 == LOCAL * 60
				SETCOLOR C_AQUA
			PRINTFORM [{LOCAL, 2}]
		ENDIF
		RESETCOLOR
		SIF LOCAL % 12 == 11
