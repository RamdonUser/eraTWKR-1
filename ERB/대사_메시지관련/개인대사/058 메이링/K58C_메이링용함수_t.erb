@K58_시간별인사(ARG)
#FUNCTIONS
#DIMS 인사
	ARG = TIME:2
	SELECTCASE TIME:2
	;조
	CASE 1,2
		인사 = 안녕하세요
	;주
	CASE 3,4
		인사 = 안녕하세요
	;야
	CASE 5,6,7
		인사 = 안녕하세요
	ENDSELECT
RETURNF 인사

