;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K110_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:대사색깔
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「 「오래도록, 죽을 수 있다」！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「……」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「…시험해 봐요, 당신 힘을」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「…예투성이가 된 지상인여 나무에 지는 나는 아니어요」
		ELSE
			PRINTFORMW 「…「열매없는 꽃이라고 지는게  좋다」！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「………」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「……！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…맞았다？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…이 정도에서는」
				ELSE
					PRINTFORMW 「…우연히군요」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「………！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…바보같은…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…우연은 아니다？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…의외로 강하구나」
				ELSE
					PRINTFORMW 「 「이대로는 당신이 이겨요」！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…이…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…졌다…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…실력은 있도록(듯이)」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…！」
				ELSE
					PRINTFORMW 「……！！！」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…언제 죽어？」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…굉장한 일, 없었어요」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…결국 지상인인가」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…살아 있다？」
				ELSE
					PRINTFORMW 「……」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「귀찮구나, 완고한 것은」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…별로 강하지는 않았다」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…그저 강하네요」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…」
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 사그메는 조금 흥미심에 이쪽을 보고 있다.
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…애먹게 해 준다」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…꽤 강하네요」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…이쪽도 추적할 수 있고 있었다…이길 수 있던 것은 우연히인가」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…위험한 곳이었던 원이군요」
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 사그메는 흥미심에 이쪽을 보고 있다.
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…하 사람들이」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…강하구나,%CALLNAME:MASTER%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「…졌는가…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…지상인의 힘이라고 하는 것도 경시할 수 없네요」
				ELSE
					PRINTFORMW 「……」
					PRINTFORMW 사그메는 흥미심에 이쪽의 얼굴을 들여다 봐 붐비고 있다.
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

