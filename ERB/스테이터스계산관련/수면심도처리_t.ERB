;수면심도의 감소 처리
;ARG		캐릭터 NO
;-----------------------------------------------------------
@수면심도감소(ARG)
IF CFLAG:MASTER:장난 == 2
	LOCAL:1 += CUP:ARG:불쾌 * 10 + CUP:ARG:고통 + CUP:ARG:공포 + CUP:ARG:반감 / 2 + CUP:ARG:억울 / 2
	SELECTCASE CUP:ARG:욕정
		CASE 50 TO 100
			LOCAL:1 += 50
		CASE 101 TO 500
			LOCAL:1 += 250
		CASE 501 TO 1000
			LOCAL:1 += 500
		CASE IS > 1000
			LOCAL:1 += 1000
		CASEELSE
	ENDSELECT
;		PRINTFORM 수면심도 기초치{LOCAL:1}
	SELECTCASE EXP:MASTER:수면간경험
		CASE 100 TO 500
			LOCAL:1 -= 100
		CASE 501 TO 1000
			LOCAL:1 -= 250
		CASE IS > 1000
			LOCAL:1 -= 500
		CASEELSE
	ENDSELECT
	SELECTCASE EXP:TARGET:수면간경험
		CASE 100 TO 500
			LOCAL:1 -= 100
		CASE 501 TO 1000
			LOCAL:1 -= 250
		CASE IS > 1000
			LOCAL:1 -= 500
		CASEELSE
	ENDSELECT
	SIF TCVAR:TARGET:수면제강도 == 1
			LOCAL:1 = LOCAL:1 / 2
	SIF TCVAR:TARGET:수면제강도 == 2
			LOCAL:1 = LOCAL:1 / 4
	SIF TCVAR:TARGET:수면제강도 == 3
			LOCAL:1 = 0
;	PRINTFORM 수면심도가 {LOCAL:1} 줄어들었다
	TCVAR:ARG:수면심도 -= LOCAL:1
ENDIF

