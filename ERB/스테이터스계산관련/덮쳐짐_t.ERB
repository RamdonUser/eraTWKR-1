SIF TALENT:ARG:성적흥미 > 0 || TALENT:ARG:수치심 < 0
	LOCAL = LOCAL + 20
SIF TALENT:ARG:자제심 || TALENT:ARG:성적흥미 < 0
	LOCAL = LOCAL - 20
SIF TALENT:ARG:정조 < 0 || TALENT:ARG:소악마
	LOCAL = LOCAL + 20
SIF TALENT:ARG:정조 > 0 || TALENT:ARG:일선을넘지않음
	LOCAL = LOCAL / 2
SIF OTOKOGIRAI(ARG)
	LOCAL = LOCAL / 2
SIF TALENT:ARG:성별기호 == 3 || MARK:ARG:반발각인 == 3
	LOCAL = 0
SIF TFLAG:120 && TFLAG:120 != ARG
	LOCAL = 0
SIF !SHIRAHU(ARG)
	LOCAL = 0
SIF CFLAG:ARG:행동 == 5
	LOCAL = 0
SIF CFLAG:ARG:데일리
	LOCAL = 0
SIF CFLAG:ARG:동침중
	LOCAL = 0
SELECTCASE CFLAG:ARG:욕구불만도
	CASE IS >= 1000
		LOCAL *= 2
	CASE IS >= 800
		LOCAL = LOCAL * 7 / 5
	CASE IS >= 600
		LOCAL = LOCAL * 6 / 5
	CASE IS >= 400
	CASE IS >= 300
		LOCAL /= 2
	CASE IS >= 150
		LOCAL /= 4
	CASEELSE
		LOCAL = 0
ENDSELECT

;체력에 의존해 덮치기율 감소
SELECTCASE BASE:ARG:체력
	CASE IS < 750
		LOCAL = 0
	CASE IS < 1000
		LOCAL /= 2
	CASE IS < 1500
		LOCAL = LOCAL * 3 / 4
	CASEELSE
ENDSELECT

SELECTCASE BASE:ARG:무드
	CASE IS < 200
		LOCAL = 0
	CASE 201 TO 500
		LOCAL = LOCAL * 2 / 3
	CASE 501 TO 800
	CASEELSE
		LOCAL = LOCAL * 3 / 2
ENDSELECT
SIF FLAG:생활능력무
	LOCAL = LOCAL * 2
RETURNF LOCAL
